<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="default"
        android:entries="@array/pref_theme_list_titles"
        android:entryValues="@array/pref_theme_list_values"
        android:key="list_preference_theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_theme_title_change_theme" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_theme_actionbar_enable_background"
        android:title="Show background on toolbar" />

</PreferenceScreen>
