<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paulvarry.intra42.activities.user.UserProjectsFragment">

    <com.paulvarry.intra42.ui.Galaxy
        android:id="@+id/galaxy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.Galaxy" />

    <ListView
        android:id="@+id/listViewAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" />

    <TextView
        android:id="@+id/textViewNoItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        android:text="@string/nothing_to_show"
        android:visibility="gone" />

</FrameLayout>
