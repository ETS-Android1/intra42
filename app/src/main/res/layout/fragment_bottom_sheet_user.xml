<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/user_profile_image"
            android:minHeight="100dp"
            app:srcCompat="@drawable/ic_person_black_custom" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/imageViewProfile"
            android:layout_alignEnd="@+id/imageViewProfile"
            android:layout_alignLeft="@+id/imageViewProfile"
            android:layout_alignRight="@+id/imageViewProfile"
            android:layout_alignStart="@+id/imageViewProfile"
            android:background="@drawable/shape_user"
            android:gravity="center|bottom"
            android:paddingBottom="16dp"
            android:paddingTop="40dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorPrimary" />
    </RelativeLayout>

</LinearLayout>