<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.projects.ProjectsGraphFragment">

    <com.paulvarry.intra42.ui.Galaxy
        android:id="@+id/galaxy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:backgroundColor="#000"
        app:colorPath="@color/colorPrimary"
        app:colorProjectAvailable="@color/colorAccent"
        app:weightPath="5dp"/>

</FrameLayout>
