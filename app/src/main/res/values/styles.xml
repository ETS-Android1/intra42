<resources>

    <style name="ThemeIntra" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#292D39</item>
        <item name="colorPrimaryDark">#1e212a</item>
        <item name="colorBackgroundFloating">#525663</item>
        <item name="colorAccent">#00babc</item>

    </style>

    <style name="ThemeIntraOrder" parent="ThemeIntra">
        <item name="colorAccent">#FF6950</item>
    </style>

    <style name="ThemeIntraAssembly" parent="ThemeIntra">
        <item name="colorAccent">#A061D1</item>
    </style>

    <style name="ThemeIntraAlliance" parent="ThemeIntra">
        <item name="colorAccent">#33C47F</item>
    </style>

    <style name="ThemeIntraFederation" parent="ThemeIntra">
        <item name="colorAccent">#4180DB</item>
    </style>

    <style name="ThemeStudios" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#990000</item>
        <item name="colorPrimaryDark">#660000</item>
        <item name="colorAccent">#000000</item>
        <item name="colorBackgroundFloating">#525663</item>
    </style>

    <style name="ThemeStudiosDark" parent="ThemeStudios">
        <item name="colorAccent">#cc0000</item>
    </style>

    <style name="ThemeDarkAndroid" parent="AppTheme.NoActionBar" />

    <style name="ThemeOld" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AppTheme.Button.BorderlessDrawable" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:tint">@color/colorGrayTint</item>
    </style>

    <style name="AppTheme.TextAppearance.PlaceHolder" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#33202027</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.BigTextBackground">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#28ff0000</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Galaxy">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="backgroundColor">#000000</item>
        <item name="colorProjectAvailable">#ffffff</item>
        <item name="colorProjectFailed">@color/colorFail</item>
        <item name="colorProjectInProgress">#afafaf</item>
        <item name="colorProjectTextAvailable">@color/colorPrimary</item>
        <item name="colorProjectTextFailed">#ffffff</item>
        <item name="colorProjectTextUnavailable">#ffffff</item>
        <item name="colorProjectTextValidated">#ffffff</item>
        <item name="colorProjectUnavailable">#46484C</item>
        <item name="colorProjectValidated">@color/colorSuccess</item>
        <item name="weightPath">4.5dp</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
