<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="themeSelectionBar">@style/ThemeSelectionBar</item>
        <item name="tintColor">@color/colorGrayTint</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!--<item name="android:textColor">#de000000</item>-->
        <!--<item name="android:textColorPrimary">#de000000</item>-->
        <!--<item name="android:textColorSecondary">#8a000000</item>-->
        <!--<item name="android:textColorTertiary">#61000000</item>-->

        <item name="bigBackgroundTextTheme">@style/AppTheme.BigTextBackground.Light</item>
        <item name="backgroundOverlay">@drawable/shape_overlay</item>

        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteTextViewStyle</item>
        <item name="weightPath">4.5dp</item>
    </style>

    <style name="myAutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">#ffffff</item>
    </style>

    <style name="ThemeIntra.Base" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/themeIntra_colorPrimary</item>
        <item name="colorPrimaryDark">@color/themeIntra_colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/themeIntra_colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/themeIntra_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/themeIntra_colorSecondaryVariant</item>
        <item name="colorAccent">@color/themeIntra_colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:windowBackground">@color/color_background</item>
    </style>

    <style name="ThemeIntra" parent="ThemeIntra.Base" />

    <style name="ThemeIntraOrder" parent="ThemeIntra">
        <item name="colorSecondary">@color/themeIntraOrder_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/themeIntraOrder_colorSecondaryVariant</item>
        <item name="colorAccent">@color/themeIntraOrder_colorSecondary</item>
    </style>

    <style name="ThemeIntraAssembly" parent="ThemeIntra">
        <item name="colorSecondary">@color/themeIntraAssembly_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/themeIntraAssembly_colorSecondaryVariant</item>
        <item name="colorAccent">@color/themeIntraAssembly_colorSecondary</item>
    </style>

    <style name="ThemeIntraAlliance" parent="ThemeIntra">
        <item name="colorSecondary">@color/themeIntraAlliance_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/themeIntraAlliance_colorSecondaryVariant</item>
        <item name="colorAccent">@color/themeIntraAlliance_colorSecondary</item>
    </style>

    <style name="ThemeIntraFederation" parent="ThemeIntra">
        <item name="colorSecondary">@color/themeIntraFederation_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/themeIntraFederation_colorSecondaryVariant</item>
        <item name="colorAccent">@color/themeIntraFederation_colorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="colorPrimary">?colorSecondary</item>
        <item name="colorOnPrimary">?colorOnSecondary</item>
    </style>

    <style name="AppTheme.Chip">
        <item name="chipCornerRadius">5dp</item>
    </style>

    <style name="AppTheme.Navigation">
        <item name="colorPrimary">?attr/colorOnBackground</item>
    </style>

    <style name="AppTheme.Button.BorderlessDrawable" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:tint">@color/colorGrayTint</item>
    </style>

    <style name="AppTheme.TextAppearance.PlaceHolder" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#33202027</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-48dp</item>
        <item name="android:dropDownVerticalOffset">-32dp</item>
    </style>

    <style name="AppTheme.BigTextBackground">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#28ff0000</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.BigTextBackground.Light" parent="AppTheme.BigTextBackground">
        <item name="android:textColor">#50d30915</item>
    </style>

    <style name="AppTheme.BigTextBackground.Dark" parent="AppTheme.BigTextBackground">
        <item name="android:textColor">#7dfd6f71</item>
    </style>

    <style name="AppTheme.Galaxy">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="colorProjectBackground">?android:attr/colorBackground</item>
        <item name="colorProjectUnavailable">?attr/colorPrimaryVariant</item>
        <item name="colorProjectOnUnavailable">?attr/colorOnPrimary</item>
        <item name="colorProjectAvailable">?attr/colorPrimary</item>
        <item name="colorProjectOnAvailable">?attr/colorOnPrimary</item>
        <item name="colorProjectInProgress">?attr/colorOnBackground</item>
        <item name="colorProjectOnInProgress">?android:attr/colorBackground</item>
        <item name="colorProjectValidated">?attr/colorSecondary</item>
        <item name="colorProjectOnValidated">?attr/colorOnSecondary</item>
        <item name="colorProjectFailed">?attr/colorError</item>
        <item name="colorProjectOnFailed">?attr/colorOnError</item>
        <item name="weightPath">4.5dp</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeSelectionBar" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:tint">#fff</item>
        <item name="android:spinnerItemStyle">@android:style/Widget.TextView.SpinnerItem</item>
    </style>

    <style name="CounterOverflow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="AppTheme.TextView" />

    <style name="AppTheme.TextView.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextView.Summary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TexAppTheme.TextView.Subhead.Colored" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TexAppTheme.TextView.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="Introduction" />

    <style name="Introduction.Calendar" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">#E75110</item>
        <item name="colorControlActivated">#E75110</item>
        <item name="android:background">#82D3F6</item>
    </style>

    <style name="Introduction.Translation" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#4688F1</item>
    </style>

    <style name="TextAppearance.AppTheme.EventTagOnList" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">monospace</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>
