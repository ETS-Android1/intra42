<resources xmlns:android="http://schemas.android.com/tools">

    <style name="ThemeIntra" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#292D39</item>
        <item name="colorPrimaryDark">#1e212a</item>
        <item name="colorSecondary">#525663</item>
        <item name="colorAccent">#00babc</item>
    </style>

    <style name="ThemeIntraOrder" parent="ThemeIntra">
        <item name="colorAccent">#FF6950</item>
    </style>

    <style name="ThemeIntraAssembly" parent="ThemeIntra">
        <item name="colorAccent">#A061D1</item>
    </style>

    <style name="ThemeIntraAlliance" parent="ThemeIntra">
        <item name="colorAccent">#33C47F</item>
    </style>

    <style name="ThemeIntraFederation" parent="ThemeIntra">
        <item name="colorAccent">#4180DB</item>
    </style>

    <style name="ThemeStudios" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#990000</item>
        <item name="colorPrimaryDark">#660000</item>
        <item name="colorAccent">#000000</item>
        <item name="colorSecondary">#525663</item>
    </style>

    <style name="ThemeStudiosDark" parent="ThemeStudios">
        <item name="colorAccent">#cc0000</item>
    </style>

    <style name="ThemeDarkAndroid" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorSecondary">#ff37474f</item>
        <item name="colorAccent">@color/mdtp_accent_color</item>
    </style>

    <style name="ThemeOld" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303f9f</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorSecondary">#7a89dc</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>

        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <item name="themeSelectionBar">@style/ThemeSelectionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">#FFF</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:padding">12dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.Button.BorderlessDrawable" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:tint">@color/colorGrayTint</item>
    </style>

    <style name="AppTheme.TextAppearance.PlaceHolder" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#33202027</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme.BigTextBackground">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#28ff0000</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Galaxy">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="backgroundColor">#000000</item>
        <item name="colorProjectAvailable">#ffffff</item>
        <item name="colorProjectFailed">@color/colorFail</item>
        <item name="colorProjectInProgress">#afafaf</item>
        <item name="colorProjectTextAvailable">?attr/colorAccent</item>
        <item name="colorProjectTextFailed">#ffffff</item>
        <item name="colorProjectTextUnavailable">#ffffff</item>
        <item name="colorProjectTextValidated">#ffffff</item>
        <item name="colorProjectUnavailable">#46484C</item>
        <item name="colorProjectValidated">@color/colorSuccess</item>
        <item name="weightPath">4.5dp</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThemeSelectionBar" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:tint">#fff</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@android:style/Widget.TextView.SpinnerItem</item>
    </style>

    <style name="CounterOverflow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textColor">#D30915</item>
    </style>

    <style name="AppTheme.TextView" />

    <style name="AppTheme.TextView.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextView.Summary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TexAppTheme.TextView.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?android:attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Introduction" />

    <style name="Introduction.Calendar" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">#E75110</item>
        <item name="colorControlActivated">#E75110</item>
        <item name="android:background">#82D3F6</item>
    </style>

    <style name="Introduction.Translation" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#4688F1</item>
    </style>

</resources>
